
<%- include("partials/header.ejs", {active: "sets"}) %>

<% if (locals.sets) { %>
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
        <% sets.forEach(set => { %>
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <title> <%= set.code %> </title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"> <%= set.code %> </text>
              </svg>
              <div class="card-body">
                <p class="card-text"> <%= set.name %> </p>
                <div class="d-flex justify-content-between align-items-center">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/setDetails/<%= set.code %>">View</a></button>
                  <small class="text-body-secondary"> <%= set.size %> </small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>

      </div>
    </div>
  </div>
<% } %>

<%- include("partials/footer.ejs") %>